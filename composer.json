{
    "name": "dhii/action-abstract",
    "description": "Abstract generic implementations related to actions.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dhii Team",
            "email": "development@dhii.co"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.4 | ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "ptrofimov/xpmock": "^1.1",
        "dhii/php-cs-fixer-config": "^0.1",
        "codeclimate/php-test-reporter": "<=0.3.2",
        "dhii/action-interface": "^0.1-alpha1",
        "dhii/stringable-interface": "^0.1"
    },
    "suggest": {
        "dhii/i18n-helper-base": "To fulfil internationalization contracts",
        "dhii/exception": "To fulfil exception creation contracts"
    },
    "autoload": {
        "psr-4": {
            "Dhii\\Action\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dhii\\Action\\UnitTest\\": "test/unit",
            "Dhii\\Action\\FuncTest\\": "test/functional"
        }
    },
    "scripts": {
        "test": "phpunit",
        "csfix": "php-cs-fixer fix -vvv"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev"
        }
    }
}
